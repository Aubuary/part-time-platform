<!--pages/login/login.wxml-->
<view class="loginContainer">
  <!-- 图片区域 -->
  <view class="background">
    <image class="image" src="{{backgroundImg}}"></image>
    <view class="motto">{{motto}}</view>
  </view>

  <!-- 登录区域 -->
  <view class="buttom">
    <button class = "login" hover-class="hover" open-type="getUserProfile" bindtap="login">快速登录</button>
    <view class="noLogin">
      <text bindtap="noLogin">暂不登录</text>
    </view>
  </view>
</view>
