/* pages/authentication/authentication.wxss */
page{
    background-color: whitesmoke;
}
.box{
    display: flex;
    flex-direction: column;
    margin: 26rpx;
    background-color: white;
    padding: 20rpx;
}
.userinfo{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.portrait{
    height: 80rpx;
    width: 80rpx;
    border-radius: 50rpx;
    margin-right: 20rpx;
}
.alreadyAuth{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
}
.detail{
    display: flex;
    flex-direction: column;
    padding: 20rpx 10rpx;
    
}
.big{
    font-size: 35rpx;
}
.small{
    font-size: 26rpx;
    padding-top: 6rpx;
    color: rgb(131, 130, 130);
}
.line{
    background-color: rgb(230, 225, 225);
    height: 1rpx;
}

.reminder{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
}
.image{
    display: flex;
    /* justify-content: center; */
    width: 200rpx;
    height: 200rpx;
    margin-top: 50%;
}
.auth{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    align-items: center;
}
.go{
    font-size: 35rpx;
    margin-top: 6rpx;
    color: #f6a57f;
}